# MongoDB Configuration
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true
  wiredTiger:
    engineConfig:
      cacheSizeGB: 1  # Adjust based on available RAM

net:
  port: 27017
  bindIp: {{ mongodb_bind_ip }}

security:
  authorization: enabled